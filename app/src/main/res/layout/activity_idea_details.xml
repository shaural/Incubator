<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdeaDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <Button
            android:id="@+id/backbutton"
            android:onClick="btnBackOnClick"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:baselineAligned="false"
            android:text="Back"
            tools:ignore="OnClick" />

        <Button
            android:onClick="btnEditOnClick"
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:baselineAligned="false"
            android:text="Edit"
            tools:ignore="OnClick" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_idea_details" />

    <EditText
        android:id="@+id/tagText"
        android:layout_width="368dp"
        android:layout_height="92dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Tags for Idea" />

    <EditText
        android:id="@+id/descriptionText1"
        android:layout_width="367dp"
        android:layout_height="166dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:enabled="false"
        android:text="Description Text for Idea" />

    <EditText
        android:id="@+id/collaboratorText"
        android:layout_width="368dp"
        android:layout_height="73dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="345dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Collaborators" />

</android.support.design.widget.CoordinatorLayout>